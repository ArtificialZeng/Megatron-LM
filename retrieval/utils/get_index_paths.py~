def get_index_dirname(args):

    # ~~~~~~~~ save paths ~~~~~~~~
    args.index_dirname = os.path.join(
        args.base_dir,
        "index",
        "%s-%s" % (args.index_ty, args.data_ty),
        "%s__t%d" % (
            args.index_str,
            args.ntrain,
        ),
    )

    mkdir(os.path.dirname(args.index_dirname))
    mkdir(args.index_dirname)

